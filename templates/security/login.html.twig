{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Connect√© en tant que: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container justify-content-center">
            <div class="card text-white bg-info mb-3 justify-content-center" style="max-width: 18rem;">
                <div class="row justify-content-center">
                    <div class="card-header text-center">Authentification</div>
                    <div class="card-body">
                        <div class="col">
                            <h1 class="h3 mb-3 font-weight-normal text-center"></h1>
                            <label for="inputUsername">Username</label>
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-center mt-4">
                            <button class="btn_valider btn btn-lg btn-primary mb-4" type="submit">
                                Valider
                            </button>
                </div>
            </div>
    </div>
</form>
{% endblock %}
