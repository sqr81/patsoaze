{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{#{% block page_title 'Tableau de bord' %}#}

{% block page_content %}

{#    <link rel="stylesheet" href="{{ asset('build/test.css') }}">#}
    <link rel="stylesheet" href="{{ asset('easyadmin/app.css') }}">
    <div class="container mb-2 d-flex justify-content-center sticky-top mb-5;" style="top: 65px">
    <ul class="navtest cf">
        <li><a href="#">Visites</a></li>
        {% for admin in countAllAdmins %}
            <li><a href="#" class="new" attr-new={{ countAllAdmins['value'] }}>Admins</a></li>
        {% endfor %}
        {% for aquarelle in countAllAquarelles %}
            <li><a href="#" class="new" attr-new={{ countAllAquarelles['value'] }}>Aquarelles</a></li>
        {% endfor %}
        {% for albumPhoto in countAllAlbumPhotos %}
            <li><a href="#" class="new" attr-new={{ countAllAlbumPhotos['value'] }}>Album photos</a></li>
        {% endfor %}
        {% for photo in countAllPhotos %}
            <li><a href="#" class="new" attr-new={{ countAllPhotos['value'] }}>Photos</a></li>
        {% endfor %}
        {% for actualite in countAllActualites %}
            <li><a href="#" class="new" attr-new={{ countAllActualites['value'] }}>Actualités</a></li>
        {% endfor %}
    </ul>

</div>
    <div class="container mb-2">
        <div class="row">
            <div class="col-6 alert-info">
                <span class="display-4">10</span> visites
            </div>
            <div class="col-6 alert-success">
                <span class="display-4">6+</span>
            </div>
        </div>
    </div>
    <div class="container mb-2">
        <div class="row">
            <div class="col-6 alert-info">
                {% for admin in countAllAdmins %}
                <span class="display-4">{{ countAllAdmins['value'] }}</span> utilisateurs
                {% endfor %}
            </div>
            <div class="col-6 alert-success">
                <span class="display-4">1+</span>
            </div>
        </div>
    </div>
    <div class="container mb-2">
        <div class="row">
            <div class="col-6 alert-info">
                {% for aquarelle in countAllAquarelles %}
                <span class="display-4">{{ countAllAquarelles['value'] }}</span> aquarelles
                {% endfor %}
            </div>
            <div class="col-6 alert-success">
                <span class="display-4">5+</span>
            </div>
        </div>
    </div>
    <div class="container mb-2">
        <div class="row">
            <div class="col-6 alert-info">
                {% for albumPhoto in countAllAlbumPhotos %}
                    <span class="display-4">{{ countAllAlbumPhotos['value'] }}</span> albums photos
                {% endfor %}
            </div>
            <div class="col-6 alert-success">
                <span class="display-4">5+</span>
            </div>
        </div>
    </div>
    <div class="container mb-2">
        <div class="row">
            <div class="col-6 alert-info">
                {% for photo in countAllPhotos %}
                <span class="display-4">{{ countAllPhotos['value'] }}</span> photos
                {% endfor %}
            </div>
            <div class="col-6 alert-success">
                <span class="display-4">15+</span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-6 alert-info">
                {% for actualite in countAllActualites %}
                    <span class="display-4">{{ countAllActualites['value'] }}</span> actualites
                {% endfor %}
            </div>
            <div class="col-6 alert-success">
                <span class="display-4">1+</span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-5">
            <div class="col-12">
                <h3>Liste des admins</h3>
                <ul class="list-group mt-5">
                    {% for admin in admins %}
                        <li class="list-group-item d-flex justify-content-between align-items-center ">
                            <span class="h2 font-weight-normal">
                                <i class="fa fa-user-secret"></i>
                            {{ admin.username }}
                            </span>
                            <span class="badge badge-primary badge-pill">
                                <img class="img-thumbnail" src="{{ vich_uploader_asset(admin, 'imageFile') }}" style="width: 150px;height: 103px">
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-12 mt-5">
                <h3>Derniers albums photos</h3>
                <ul class="list-group mt-5">
                    {% for albumPhoto in albumPhotos %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="h2 font-weight-normal">
                                <i class="fas fa-image"></i>
                            {{ albumPhoto.nom }}
                            </span>
                            <span class="badge badge-primary badge-pill">
                                <img class="img-thumbnail" src="{{ vich_uploader_asset(albumPhoto, 'imageFile') }}" style="width: 150px;height: 103px">
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        <div class="col-12 mt-5">
            <h3>Dernières photos</h3>
                <ul class="list-group mt-5">
                    {% for photo in photos %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="h2 font-weight-normal">
                                <i class="fa fa-camera-retro"></i>
                            {{ photo.nom }}
                            </span>
                            <span class="badge badge-primary badge-pill">
                                <img class="img-thumbnail" src="{{ vich_uploader_asset(photo, 'imageFile') }}" style="width: 150px;height: 103px">
                            </span>
                        </li>
                    {% endfor %}
                </ul>
        </div>
            <div class="col-12 mt-5">
            <h3>Dernières aquarelles</h3>
                <ul class="list-group mt-5">
                    {% for aquarelle in aquarelles %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="h2 font-weight-normal">
                                <i class="fa fa-paint-brush"></i>
                            {{ aquarelle.nom }}
                            </span>
                            <span class="badge badge-primary badge-pill">
                                <img class="img-thumbnail" src="{{ vich_uploader_asset(aquarelle, 'imageFile') }}" style="width: 150px;height: 103px">
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="col-12 mt-5">
            <h3>Dernières actualités</h3>
                <ul class="list-group mt-5">
                    {% for actualite in actualites %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="h2 font-weight-normal">
                                <i class="fa fa-newspaper-o"></i>
                            {{ actualite.titre }}
                            </span>
                            <span class="badge badge-primary badge-pill">
                                <img class="img-thumbnail" src="{{ vich_uploader_asset(actualite, 'imageFile') }}" style="width: 150px;height: 103px">
                            </span>
                        </li>
                    {% endfor %}
                </ul>
        </div>
    </div>
{#    /*-------navtest------*/#}
